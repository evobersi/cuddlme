<div class="park-wrap">
  <div class="park-image">
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@park.latitude}%2C#{@park.longitude}", class: "park" %>
</div>
<%= @park.name %>, <%= @park.borough %>, (<%= @park.distance_to("#{@user.zipcode}").round(2) %> miles away)
<%= button_to "Add to Favorites", park_users_path(@park), :method => :post, :alert => "Added!" %>
<br>
<em><%= @park.address %></em>
<ul>Parks nearby:</ul>
<% @park.nearbys(2).each do |park| %>
<li><%= link_to park.name, park_path(park) %>, <%= park.distance.round(2) %> miles
<% end %>

