  <% unless @user.errors.none? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <div class="signup-row">
  <div class="home-signup four columns">
  <label for="image">Profile Picture</label>
  <%= f.file_field :avatar, accept:                   
  'image/png,image/gif,image/jpeg' %>

  <label for="name">Username</label>
  <%= f.text_field :name %>
  <br>
  <label for="email">Email</label>
  <%= f.email_field :email, size: 25 %>

  <label for="zipcode">Zip Code</label>
  <%= f.text_field :zipcode, size: 27 %>
  <br>
  <label for="password">Password</label>
  <%= f.password_field :password, size: 14 %>
  <label for="password confirmation"> Password confirmation</label>
  <%= f.password_field :password_confirmation, size: 14 %>
  <br>
  <%= f.submit %>
  <%= f.hidden_field :id, value: "#{session[:user_id]}" %>
<% end %>
  </div>
  </div>


