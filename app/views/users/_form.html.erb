  <% unless @user.errors.none? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>


<%= form_for @user do |f| %>

  <p><%= f.email_field :email, :placeholder => "Email"%></p>

  <p><%= f.password_field :password, :placeholder => "Password" %></p>
  
  <p><%= f.password_field :password_confirmation, :placeholder => "Password" %></p>
 
  <p><%= f.text_field :zipcode, :placeholder => "Zip Code" %></p>

  <p><%= f.hidden_field :id, value: "#{session[:user_id]}" %></p>

  <p class = "submit"> <%= f.submit %> </p>

<% end %>

